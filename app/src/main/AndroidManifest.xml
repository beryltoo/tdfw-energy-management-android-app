<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.turndownforwatt">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="Turn down for Watt"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.Light.NoActionBar"
        tools:ignore="GoogleAppIndexingWarning">

        <!--Splash Screen-->
        <activity
            android:name="com.example.turndownforwatt.Splash_Screen"
            android:label="@string/app_name">
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN"
                    android:label="@string/app_name" />

                <!--Main Launcher Activity-->
                <category
                    android:name="android.intent.category.LAUNCHER"
                    android:label="@string/app_name"/>
            </intent-filter>
        </activity>


        <!--Drawer Tabs Activities-->
        <activity
            android:name=".MainActivity"
            android:label="Overview"
            android:launchMode="singleTask"/>
        <activity
            android:name=".Drawer_activities.Meter"
            android:label="Meter"
            android:launchMode="singleTask"/>
        <activity
            android:name=".Drawer_activities.Meter_add"
            android:label="Add Meter"
            android:launchMode="singleTask"/>
        <activity
            android:name=".Drawer_activities.Readings"
            android:label="Readings"
            android:launchMode="singleTask"/>
        <activity
            android:name=".Drawer_activities.Readings_add"
            android:label="Add Readings"
            android:launchMode="singleTask"/>
        <activity
            android:name=".Drawer_activities.Statistics"
            android:label="Statistics"
            android:launchMode="singleTask"/>
    </application>

</manifest>